<main class="main">
  <div class="inner">
    <div class="tweet__wrapper">
      <p class="tweet__hedding">
        <%= @tweet.title %>
      </p>
      <%= link_to "by #{@tweet.user.nickname}", root_path, class: :tweet__user %>
      <% if user_signed_in? && current_user.id == @tweet.user_id %>
        <div class="tweet__manage">
          <%= link_to "編集する", edit_tweet_path, class: :tweet__btn %>
          <%= link_to "削除する", root_path, class: :tweet__btn %>
        </div>
      <% end %>
      <div class="tweet__image">
        <%= image_tag @tweet.image %>
      </div>
      <div class="tweet__body">
        <div class="tweet__detail">
          <p class="detail__title">ツイートの説明</p>
          <p class="detail__message">
            <%= @tweet.description %>
          </p>
        </div>
        <div class="tweet__detail">
          <p class="detail__title">動画</p>
          <p class="detail__message">
            <%= @tweet.video_url %>
          </p>
        </div>
      </div>
      <div class="tweet__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
          <%# <%= form_with model: モデル名,local: true do |f|%>
            <div class="field">
              <%# <%= f.label :hoge, "コメント" %><br />
              <%# <%= f.text_field :hoge, id:"comment_text" %>
            </div>
            <div class="actions">
              <%# <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <%# <% end %> 
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%# <%= " コメントのテキスト "%>
              <%# <%= link_to "（ ユーザー名 ）", root_path, class: :comment_user %>
            </li>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
