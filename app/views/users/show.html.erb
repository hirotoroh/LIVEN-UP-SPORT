<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@nickname}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= "#{@nickname}" %></td>
          </tr>
          <tr>
            <th class="table__col1">好きなスポーツ</th>
            <td class="table__col2"><%= "#{@user.sport}" %></td>
          </tr>
          <tr>
            <th class="table__col1">性別</th>
            <td class="table__col2"><%= "#{@user.gender}" %></td>
          </tr>
          <tr>
            <th class="table__col1">年齢</th>
            <td class="table__col2"><%= "#{@user.age}" %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@nickname}さんのツイート"%>
      </h2>
      <div class="user__card">
        <%= render partial: "tweets/tweet", collection: @tweets %>
      </div>
    </div>
  </div>
</div>